@import "nib"
@import "color_thema.styl"
@charset"utf-8";

$conteiner_width = 100%

body
 margin 0
 padding 0
 font-family 'Roboto Condensed', sans-serif;
 thema_blue_color()
 thema_blue_body()
 
ul,
ol
 margin 0

#header-wrap
 fixed(top left)
 width 100%

#header-container
 height 34px
 thema_blue_special_container()

#header
 width $conteiner_width
 margin 0 auto
 position relative

.brand
 font-family 'Averia Gruesa Libre', cursive;

#search_types
 margin-left 10px
 display inline

.search-query
 border-radius(4px)
 
.navbar-inverse .navbar-inner
 background transparent
 border none

#container
 margin 0 auto
 overflow auto
 padding-top 35px
 padding-bottom 25px
 
#history
 float left
 width 30%
 thema_blue_body()
 thema_blue_sidebar_color()
 
#history_title
 thema_blue_sidebar_hover()
 height: 23px;
 padding: 4px;
 
.history
 thema_blue_sidebar_border()
 padding 9px 4px

.history:hover
 thema_blue_sidebar_hover()

.history .btn_delete
 visibility hidden

.history:hover .btn_delete
 visibility visible

.history
  clearfix()
 
#history_list li
 list-style-type none
 float left

.history_buttons
 float right !important

/* .btn_delete
position absolute
 margin-top 5px
 margin-left 5px*/

.history_contents,
.btn_delete
 cursor pointer

#search_results
 float right
 width 70%
 thema_blue_results_background()

#tab-content li
 thema_blue_results_border()

#footer-wrap
 fixed(bottom left)
 width 100%
 
#footer-container
 height 24px
 thema_blue_special_container()
 
#footer
 width $conteiner_width
 margin 0 auto
 position relative


/*----------- bootstrap-narrowバグ（？） ---------------*/

.btn-mini [class^="icon-"],
.btn-mini [class*=" icon-"] {
  margin-top: 0;
}
.btn {
  line-height: 19px;
}
input[type="radio"],
input[type="checkbox"] {
  margin: 0;
}
.navbar-inverse .navbar-search .search-query:focus,
.navbar-inverse .navbar-search .search-query.focused {
  padding: 0 7px;
  border: 1px solid #111111;
}